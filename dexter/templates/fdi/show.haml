%%inherit(file="layout_article.haml")
%%block(name="title")
  &= document.title

%%block(name="article_header_controls")
  - if document.can_user_edit(current_user):
    %a.btn.btn-default(href=url_for('edit_article', id=document.id))
      %i.fa.fa-pencil
      Edit article
  - if investment:
    %a.btn.btn-default(href=url_for('edit_article_analysis', id=document.id, fdi_id=investment.id))
      %i.fa.fa-tasks
      Edit analysis
    %a.btn.btn-default(href=url_for('show_article', id=document.id))
      %i.fa.fa-pencil
      Back to article
  - else:
    %a.btn.btn-default(href=url_for('edit_article_analysis', id=document.id))
      %i.fa.fa-tasks
      Edit analysis
    %a.btn.btn-default(href=URL)
      %i.fa.fa-pencil
      Back to search

.row
  .col-sm-5
    %%include(file="details.haml")
  .col-sm-7
    %%include(file="analysis.haml")
